# Local Development Environment Configuration
ENVIRONMENT=local
USE_POLLING=true

# Public URL (not used in polling mode, but required by config)
PUBLIC_BASE_URL=http://localhost:8000

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# Telegram Bots (use test tokens or create dev bots)
NARRATIVE_TELEGRAM_BOT_TOKEN=your-narrative-bot-token
NARRATIVE_TELEGRAM_SECRET_TOKEN=your-secret-token
IMPACT_TELEGRAM_BOT_TOKEN=your-impact-bot-token
IMPACT_TELEGRAM_SECRET_TOKEN=your-secret-token

# Notion API
NOTION_API_KEY=your-notion-api-key
NOTION_SCHOOLS_DB_ID=your-schools-db-id
NOTION_TEACHERS_DB_ID=your-teachers-db-id
NOTION_NARRATIVE_DB_ID=your-narrative-db-id
NOTION_IMPACT_DB_ID=your-impact-db-id
NOTION_STAFF_NARRATIVE_DB_ID=your-staff-narrative-db-id
NOTION_CATEGORIES_DB_ID=your-categories-db-id

# Category Settings
CATEGORY_MODE=hybrid
CHROMA_DIR=.chroma_categories

# Narrative Window
NARRATIVE_WINDOW_MINUTES=1
